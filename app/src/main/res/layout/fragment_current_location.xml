<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".currentLocation">

    <ImageView
        android:id="@+id/locationPointer"
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_my_location_24"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="85dp"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="100dp"
        android:layout_marginTop="200dp"
        android:visibility="gone"

        />


    <!-- Floor 1 map -->
    <ImageView
        android:id="@+id/floor1Map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/floor1map"
        android:visibility="gone"
       />

    <!-- Room name TextViews for Floor 1 -->
    <LinearLayout
        android:id="@+id/floor1RoomNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp">
        <!-- Room names for Floor 1 will be dynamically added here -->
    </LinearLayout>

    <!-- Floor 2 map -->
    <ImageView
        android:id="@+id/floor2Map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/floor2map"
        android:visibility="gone"
         />

    <!-- Room name TextViews for Floor 2 -->
    <LinearLayout
        android:id="@+id/floor2RoomNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp">
        <!-- Room names for Floor 2 will be dynamically added here -->
    </LinearLayout>

    <!-- Floor 3 map -->
    <ImageView
        android:id="@+id/floor3Map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/floor3map"
        android:visibility="gone"
         />

    <!-- Room name TextViews for Floor 3 -->
    <LinearLayout
        android:id="@+id/floor3RoomNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp">
        <!-- Room names for Floor 3 will be dynamically added here -->
    </LinearLayout>

    <TextView
        android:id="@+id/room1Name"
        android:layout_width="47dp"
        android:layout_height="15dp"
        android:text="Room 101"
        android:textColor="#00000000"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="448dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
